<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Listado de Usuarios</title>
  <!-- <link rel="stylesheet" type="text/css" href="/css/vistas.css"> <!-- no lo toma -->
 
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- DataTables CSS -->
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

</head>
<style>
  h1{
        text-align: center;
        color: white;
        padding: 20px;
        background-color: rgba(0, 0, 0, 0.7);
        margin: 0; /* Asegura que no haya márgenes que causen desplazamiento */
        margin-bottom: -40px;
}
table {
    width: 100%;
    height: 100px;
    overflow-y: auto;
    background-color: #f0f0f0;
    border: 3px solid #031622;
    padding: 10px;
}
th {
    background-color: #4CAF50;
    color: #fff;
    padding: 20px;
    text-align: center;
}
td {
    padding: 5px;
    border-bottom: 1px solid #0d0d0d;
    text-align: center;
    height: 20px;
    
}
tr {
    height: 15px; /* ajusta la altura de las filas */
    line-height: 10px; 
    color:rgb(140, 228, 158);
}
.boton-volver {
position: fixed;
right: 20px;
background-color: #d0eed0; /* Verde */
border: none;
border-radius: 10px; /* Redondeado */
padding: 10px 20px;
font-size: 16px;
cursor: pointer;
margin-top: 20px;
}

.boton-volver:hover {
background-color: #5b675b; /* Verde oscuro */
color: #fff;
}

#myTable {
  padding: 15px;
  border: 3px solid #ddd;
}

.dataTables_length, .dataTables_filter {
      margin-bottom: 20px; /* Espacio debajo del menú y la barra de búsqueda */
    }

    /* Opcional: Un poco de separación adicional para los controles de paginación */
    .dataTables_paginate {
      margin-top: 10px; /* Espacio encima de la paginación */
    }

    thead {
      background-color: #4CAF50; /* Color de fondo para el título */
      color: white;    
      height: 20px;          /* Color del texto en el título */
    }

    .table thead th {
  background-color: #4CAF50; /* Cambiar el color de fondo del encabezado */
  color: #f7f6f6; /* Cambiar el color del texto del encabezado */
}

.table thead th:hover {
  background-color: #abcdb6; /* Cambiar el color de fondo del encabezado al pasar el ratón */
}

</style>

<body>
 <h1>Listado de Usuarios</h1>
  <div class="container mt-5">
    <br>   
    <!-- Tabla -->
    <table id="myTable" class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>USUARIOS</th>
        <th>PASSWORD</th>
        <th>ESPECIALIDADES</th>
      </tr>
    </thead>
    <tbody>
      <% if (data.length > 0) { %>
        <% data.forEach(function(usuario) { %>
          <tr>
            <td><%= usuario.username %></td>
            <td><%= usuario.password %></td>
            <td><%= usuario.especialidad %></td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="3">No hay usuarios en la base de datos</td>
        </tr>
      <% } %>
    </tbody>
  </table>
  </div>
  <button class="boton-volver" onclick="window.history.back();">Volver</button>  

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- DataTables JS -->
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>

<script>
  $(document).ready(function() {
    $('#myTable').DataTable({
      "paging": true,          // Activar paginación
      "searching": true,       // Activar búsqueda
      "info": true,            // Mostrar información de la tabla
      "pageLength": 6,         // Cantidad de filas por página
      "language": {            // Traducción al español
        "lengthMenu": "Mostrar _MENU_ registros por página",
        "zeroRecords": "No se encontraron resultados",
        "info": "Mostrando página _PAGE_ de _PAGES_",
        "infoEmpty": "No hay registros disponibles",
        "infoFiltered": "(filtrado de _MAX_ registros totales)",
        "search": "Buscar:",
        "paginate": {
          "first": "Primero",
          "last": "Último",
          "next": "Siguiente",
          "previous": "Anterior"
        },
        "loadingRecords": "Cargando...",
        "processing": "Procesando...",
        "emptyTable": "No hay datos disponibles en la tabla",
        "aria": {
          "sortAscending": ": activar para ordenar la columna de manera ascendente",
          "sortDescending": ": activar para ordenar la columna de manera descendente"
        }
      }
    });
  });
</script>

</body>

</html>